{
	"private": true,
	"name": "ntnu-csie-camp-app",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --ignore-path .gitignore --check **/*.{ts,js,json,yaml,yml,svelte,html,css} && eslint .",
		"format": "prettier --ignore-path .gitignore --write **/*.{ts,js,json,yaml,yml,svelte,html,css}",
		"changeset": "changeset",
		"upload": "pnpm build && wrangler pages publish --project-name camp-backend .svelte-kit/cloudflare",
		"tail": "wrangler pages deployment tail --project-name camp-backend"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.1",
		"@cloudflare/workers-types": "^4.20230404.0",
		"@iconify/svelte": "^3.1.3",
		"@playwright/test": "^1.32.3",
		"@sentry/svelte": "^7.49.0",
		"@sentry/vite-plugin": "^0.7.2",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-cloudflare": "^2.2.0",
		"@sveltejs/kit": "^1.15.7",
		"@tailwindcss/typography": "^0.5.9",
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"@tsndr/cloudflare-worker-jwt": "^2.2.1",
		"@types/debug": "^4.1.7",
		"@types/pangu": "^4.0.0",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"autoprefixer": "^10.4.14",
		"daisyui": "^2.51.5",
		"debug": "^4.3.4",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"kysely": "^0.24.2",
		"kysely-d1": "^0.3.0",
		"lint-staged": "^13.2.1",
		"octokit": "^2.0.14",
		"pangu": "^4.0.7",
		"postcss": "^8.4.23",
		"prettier": "^2.8.7",
		"prettier-plugin-svelte": "^2.10.0",
		"prettier-plugin-tailwindcss": "^0.2.7",
		"svelte": "^3.58.0",
		"svelte-check": "^3.2.0",
		"svelte-i18n": "^3.6.0",
		"svelte-markdown": "^0.2.3",
		"tailwindcss": "^3.3.1",
		"tslib": "^2.5.0",
		"typescript": "^5.0.4",
		"vite": "^4.3.1",
		"vitest": "^0.30.1",
		"wrangler": "^2.16.0",
		"zod": "^3.21.4"
	},
	"lint-staged": {
		"*.{ts,js,json,yaml,yml,svelte,html,css}": [
			"prettier --write"
		]
	}
}
